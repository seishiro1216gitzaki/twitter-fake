.sidebar-left
  .profile-card
    .profile-card-box
      %a.profile-card-back-img
        = image_tag current_user.image, size: '' if current_user.image.present?
    .profile-content
      %a.profile-card-me-img
        = image_tag current_user.image, size: '50x50' if current_user.image.present?
      .profile-card-user-fields
        .profile-card-username
          = current_user.name
          %i.fa.fa-lock
        .profile-card-idname
          %a.user-edit
            = link_to users_path(current_user) do
              = "@#{current_user.nickname}"
      .ProfileCardStatus
        %ul.ProfileCardStatus-statuslist
          %li.ProfileCardStatus-status
            %span.u-block
              ツイート
            %span.value
              = current_user.tweets.count
          %li.ProfileCardStatus-status
            %span.u-block
              = link_to following_user_path(current_user) do
                フォロー
            %span.value
              = current_user.followings.count
          %li.ProfileCardStatus-status
            %span.u-block
              = link_to followers_user_path(current_user) do
                フォロワー
            %span.value
              = current_user.followers.count
  .follow-request
    .follow-request-module
      %a.follow-request-btn{:href => ""} 10件の新しいフォローリクエスト
  .trends
    .trends-inner
      .trends-inner-header
        東京のトレンド
      .trends-inner-list
        .trends-name
          天気
        .trends-count
          3,123件のツイート
      .trends-inner-list
        .trends-name
          Vitamin C
        .trends-count
          3,333件のツイート
