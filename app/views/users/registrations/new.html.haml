.signupbox
  .signupbox--inner
    .signup Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.label :image
        %br/
        = f.file_field :image,class: "file_field"
      .field
        = f.label :nickname
        %br/
        = f.text_field :nickname, autofocus: true,class: "text_field"
      .field
        = f.label :name
        %br/
        = f.text_field :name,class: "text_field"
      .field
        = f.label :email
        %br/
        = f.email_field :email,class: "text_field"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off",class: "text_field"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off",class: "text_field"
      .actions
        = f.submit "Sign up",class: "signup_button"
    .login
      = render "users/shared/links"
